{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "build",
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [ "src/**/*" ],
  "exclude": [ "node_modules" ]
}
